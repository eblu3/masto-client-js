{
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "ES2017",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"rootDir": "src",
		"outDir": "js"
	},
	"include": ["src/**/*", "src/modules/blurhash/declarations.d.ts"],
	"exclude": ["src/env.mjs"]
}